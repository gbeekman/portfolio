<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image.to_s, width: '100%' %>
      </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <% if logged_in?(:site_admin) %>
      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_my_portfolio_path(@portfolio_item) %></button>
      <% end %>
      <hr />

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>
      <hr />

      <h3>Technologies Used</h3>

      <% @portfolio_item.technologies.each do |t| %>
        <p>
          <%= t.name %>
        </p>

      <% end %>

      </div>
    </div>

</div>

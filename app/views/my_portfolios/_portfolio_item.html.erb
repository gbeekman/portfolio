<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), :class => "card-img-top" %>
    <div class="card-body">
      <p class="card-text">
        <strong><%= portfolio_item.title %></strong>
        <br />
        <small><p> <%= portfolio_item.subtitle %> </p></small> <br />
        <%= portfolio_item.body %> </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", portfolio_show_path(portfolio_item) %></button>

        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>

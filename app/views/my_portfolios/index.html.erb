<h1>Portfolio Items</h1>

<%= link_to "Create new item", new_my_portfolio_url %>

<% @portfolio_items.each do |item| %>
  <p><%= link_to item.title, my_portfolio_path(item) %></p>
  <p> <%= item.subtitle %> </p>
  <p> <%= item.body %>   </p>
  <p> <%= image_tag item.thumb_image if !item.thumb_image.nil? %> </p>
  <%= link_to "Edit", edit_my_portfolio_path(item) %>
  <%= link_to 'Delete Portfolio item', my_portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>

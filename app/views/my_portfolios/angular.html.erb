<h1>Angular Portfolio Items</h1>

<%= link_to "Create new item", new_my_portfolio_url if logged_in?(:site_admin) %>

<% @angular_portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_show_path(item) %></p>
  <p> <%= item.subtitle %> </p>
  <p> <%= item.body %>   </p>
  <p> <%= image_tag item.thumb_image if !item.thumb_image.nil? %> </p>
  <%= link_to "Edit", edit_my_portfolio_path(item) if logged_in?(:site_admin) %>
  <%= link_to 'Delete Portfolio item', my_portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?'} if logged_in?(:site_admin) %>
<% end %>
